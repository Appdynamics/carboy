+
+@HOMEBREW_PREFIX@/var/log/apt-cacher-ng/apt-cache*.err {
+        daily
+        notifempty
+        missingok
+        rotate 7
+        compress
+        delaycompress
+        create
+        postrotate
+                launchctl kill SIGUSR1 @LAUNCHD_SERVICE_TARGET@
